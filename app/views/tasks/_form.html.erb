<%= simple_form_for(@task, html:{class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :content,label: false, required: true, input_html:{class: "form-control"}, placeholder:"Enter task description" %>

    <%= f.input :project,label: false, required: true, input_html:{class: "form-control"}, placeholder:"Enter project" %>
	<%= f.input :comments, required: true, input_html:{class: "form-control"} %>  
    <%= f.button :submit, "Save" ,class: "btn btn-primary btn-block"  %>

  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
<% end %>
