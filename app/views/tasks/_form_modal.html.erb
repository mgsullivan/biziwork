
<div class="modal fade" id="task_modal">
	<div class="modal-dialog">
	<div class="panel panel-default">
		<div class="modal-header text-center">

			<button class="close" data-dismiss="modal">x</button>

			<h2>New Task</h2>

		</div>

		<div class="modal-body">
			<%= simple_form_for(Task.new, html:{class: "form-signin"}) do |f| %>
			  <%= f.error_notification %>

			  
			    <%= f.input :content,label: "Description", input_html:{class: "form-control"} %>
			    <p><b>Project</b></p>

			    <%= f.collection_select :project_id, project_list_for(current_user), :id, :name, {prompt: "Select a project"}, {class: "form-control"}%><br>
				<%= f.input	 :comments, label: "Comments", input_html:{class: "form-control"} %>  
			    <%= f.button :submit, "Save" ,class: "btn btn-primary btn-block"  %>

			  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
			<% end %>
		</div>
		<div class="modal-footer">

		</div>
		</div>
	</div>
	
</div>