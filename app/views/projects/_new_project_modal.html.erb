<div class="modal fade" id="new_project_modal">
	<div class="modal-dialog">
	<div class="panel panel-default">
		<div class="modal-header text-center">

			<button class="close" data-dismiss="modal">x</button>

			<h2>New Project</h2>

		</div>

		<div class="modal-body">
			<%= simple_form_for(Project.new, html:{class: "form-signin"}) do |f| %>
			  <%= f.error_notification %>

			  
			    <%= f.input :name,label: "Name", input_html:{class: "form-control"} %>
			    <p><b>Team</b></p>

			    <%= f.collection_select :team_id, team_list_for(current_user), :id, :name, {prompt: "Select a team"}, {class: "form-control"}%><br>
				<%= f.button :submit, "Save" ,class: "btn btn-primary btn-block"  %>

			  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
			<% end %>
		</div>
		<div class="modal-footer">

		</div>
		</div>
	</div>
	
</div>