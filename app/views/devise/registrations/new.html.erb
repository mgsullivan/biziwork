

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
<h2 class= "text-center">Sign up</h2>
    <%= f.input :email, required: true, autofocus: true,label: false,input_html:{ class: "form-control"}, placeholder: "Input your email" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable),label: false,input_html:{ class: "form-control"}, placeholder: "Input password" %>
    <%= f.input :password_confirmation, required: true,label: false,input_html:{ class: "form-control"}, placeholder: "Confirm password" %>
  
    <%= f.button :submit, "Sign up",class: "btn btn-primary btn-block"  %>
  
<% end %>

<%= render "devise/shared/links" %>
